pipeline {
    agent any

    stages {
        stage('Checkout Code') {
            steps {
                // Checkout code from GitHub using credentials
                checkout([
                    $class: 'GitSCM',
                    branches: [[name: '*/main']],
                    extensions: [],
                    userRemoteConfigs: [[
                        credentialsId: 'github-creds', // Your GitHub credentials ID
                        url: 'https://github.com/alx-backend-python/messaging_app.git'
                    ]]
                ])
            }
        }

        stage('Install Dependencies') {
            steps {
                sh 'pip install -r requirements.txt'
            }
        }

        stage('Run Tests with pytest') {
            steps {
                sh 'pytest --junitxml=test-results/results.xml'
            }
            post {
                always {
                    junit 'test-results/results.xml'
                }
            }
        }
    }

    post {
        always {
            echo 'Pipeline completed - check test results'
        }
    }
}
